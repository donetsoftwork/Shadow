{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "ShadowSql/ShadowSql.csproj",
            "Dapper.Shadow/Dapper.Shadow.csproj",
            "Shadow.DDL/Shadow.DDL.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "ShadowSql",
      "_appTitle": "ShadowSql",
      "_enableSearch": false,
      "pdf": false
    }
  }
}