{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "ShadowSql.Core/ShadowSql.Core.csproj",
            "ShadowSql/ShadowSql.csproj",
            "ShadowSql.Expressions/ShadowSql.Expressions.csproj",
            "Dapper.Shadow.Core/Dapper.Shadow.Core.csproj",
            "Dapper.Shadow/Dapper.Shadow.csproj",
            "Shadow.DDL/Shadow.DDL.csproj",
            "filterConfig.yml"
          ],
          "exclude": [ "Benchmarks/*", "Tests/*" ]
        }

      ],
      "dest": "api",
      "filter": "../filterconfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "default(zh-cn)",
      "templates/chinese",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "Shadow",
      "_appTitle": ".net拼写sql",
      "_enableSearch": false,
      "pdf": false
    }
  }
}